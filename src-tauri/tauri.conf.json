{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clean-your-mac",
  "version": "0.1.0",
  "identifier": "com.huangdazhen.clean-your-mac",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mac磁盘清理工具",
        "width": 1000,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600,
        "maxWidth": 1200,
        "maxHeight": 900,
        "resizable": false,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
